<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/newsPrimaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/NewBackgroundColor</item>
    </style>

    <style name="Theme.New" parent="AppTheme" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/newPrimaryTextColor</item>
        <item name="colorControlHighlight">@color/NewBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/newPrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/newSecondaryTextColor</item>
        <item name="android:background">@color/NewBackgroundColor</item>
    </style>
    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/newPrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
